// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tips      Tip[]
  visits    Visit[]
}

model Venue {
  id          String     @id @default(cuid())
  name        String
  slug        String     @unique
  category    String[]   // ["Bar", "Brewery", "Gastropub"]
  phone       String?
  address     String
  city        String
  lat         Float?
  lng         Float?
  openTime    String     // "12:00"
  closeTime   String     // "00:00"
  bio         String?
  coverImage  String?
  logoText    String?    // "CH" for Copper Head
  isOpen      Boolean    @default(true)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  menuItems   MenuItem[]
  staff       Staff[]
  visits      Visit[]
}

model MenuItem {
  id          String   @id @default(cuid())
  venueId     String
  venue       Venue    @relation(fields: [venueId], references: [id], onDelete: Cascade)
  name        String
  description String?
  price       Float
  category    String   // "Starter", "Main", "Cocktail", "Beer", "Non-alcoholic"
  ingredients String?
  weight      String?  // "100g", "200ml"
  image       String?
  isAvailable Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Staff {
  id        String   @id @default(cuid())
  venueId   String
  venue     Venue    @relation(fields: [venueId], references: [id], onDelete: Cascade)
  name      String
  role      String   @default("Server")
  avatar    String?
  rating    Float    @default(5.0)
  createdAt DateTime @default(now())
  tips      Tip[]
}

model Tip {
  id            String   @id @default(cuid())
  staffId       String
  staff         Staff    @relation(fields: [staffId], references: [id])
  userId        String?
  user          User?    @relation(fields: [userId], references: [id])
  amount        Float
  currency      String   @default("USD")
  paymentMethod String   // "card", "apple_pay", "google_pay"
  stripeId      String?  // Stripe payment intent ID
  status        String   @default("pending") // pending, completed, failed
  createdAt     DateTime @default(now())
}

model Visit {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  venueId   String
  venue     Venue    @relation(fields: [venueId], references: [id])
  createdAt DateTime @default(now())
}
